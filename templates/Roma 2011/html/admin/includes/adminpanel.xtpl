<!-- BEGIN: AdminPanel -->

<script>
        jQuery(function() {
                jQuery( "#sitefeatures" ).accordion({
                        event: "click hoverintent",
                        autoHeight: false,
                        navigation: true
                });

                jQuery( "#AdminPanel" ).tabs({
                   cookie: {
				// store cookie for a day, without, it would be a session cookie
				name: 'AdminPanel',
				expires: 1
			   },
                   select: function(event, ui) {
                      id = ui.tab.hash;
                      var confirmed = true;
                      var retval = true;
                      if (id == '#initialload')
                      {
                         confirmed =  confirm('{BUTTON_INITIAL_LOAD_CONFIRM}');
                         retval = false;
                      }

                      if (id == '#purgehist')
                      {
                         confirmed =  confirm('{BUTTON_PURGE_HIST_CONFIRM}');
                         retval = false;
                      }

                      if (id == '#maintmodeoff')
                      {
                         retval = false;
                      }

                      if (id == '#maintmode')
                      {
                         confirmed =  confirm('{BUTTON_ADMIN_CONF_MAINT}');
                         retval = false;
                      }

                      if (confirmed)
                      {
                         if (jQuery(id).attr('url'))
                         {
                            window.location = jQuery(id).attr('url');
                         }
                      }
                      if (!retval)
                      {
                         jQuery( "#AdminPanel").tabs('select', 0);
                      }
                      return retval;
                  }
              });
          });
</script>


